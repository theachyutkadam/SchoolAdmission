<h3><%=link_to "Home", welcomes_index_path%></h3>
<h3><%=link_to "New student", new_student_path%></h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#ID</th>
      <th>Full Name</th>
      <th>Standard</th>
      <th>Mother Name</th>
      <th>Gender</th>
      <th>IsActive</th>
      <th>Action</th>
    </tr>
    <tbody>
      <%@students.each do |student|%>
        <tr>
          <td><%=student.id%></td>
          <td><%="#{student.first_name} #{student.middle_name} #{student.last_name}"%></td>
          <td><%=student.standard.name%></td>
          <td><%=student.mother_name%></td>
          <td><%=student.gender%></td>
          <td><%=student.is_active%></td>
          <td><%=link_to "Edit", edit_student_path(student), class: "btn .btn-info"%></td>
        </tr>
      <%end%>
    </tbody>
  </thead>
</table>