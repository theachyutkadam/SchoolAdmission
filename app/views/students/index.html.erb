<h3><%=link_to "Home", welcomes_index_path%></h3>
<h3><%=link_to "New student", new_student_path%></h3>
<table>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Mother Name</th>
      <th>Gender</th>
      <th>Action</th>
    </tr>
    <tbody>
      <%@students.each do |student|%>
        <tr>
          <td><%="#{student.first_name} #{student.middle_name} #{student.last_name}"%></td>
          <td><%=student.mother_name%></td>
          <td><%=student.gender%></td>
          <td><%=link_to "Edit", edit_student_path(student)%></td>
        </tr>
      <%end%>
    </tbody>
  </thead>
</table>